
<%- include ('partials/head.ejs') %>


    
<body>
    <%- include ('partials/navbar.ejs') %>
    <div class="container">
        <br>
        <h2>Perguntas</h2>
        <hr>
        <a href="/perguntas" class="btn btn-dark"> Perguntar </a>
        <hr>
        <% perguntas.forEach(pergunta => { %>
            <br>
            <div class="card">
                <div class="card-body">
                    <h3><%= pergunta.titulo %></h3>
                </div>

                <div class="card-footer">
                    <a href="perguntas/<%= pergunta.id %>"><button class="btn btn-dark"> Responder </button></a>
                </div>
            </div>
        <% }) %>
    </div>
</body>
<%- include('partials/footer.ejs') %>